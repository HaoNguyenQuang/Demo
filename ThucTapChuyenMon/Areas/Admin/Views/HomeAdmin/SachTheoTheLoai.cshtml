@using ThucTapChuyenMon.Models;
@model IEnumerable<ThucTapChuyenMon.Models.Sach>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "SachTheoTheLoai";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<h1>Sách Theo Thể Loại</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Tên Sách
            </th>
            <th>
                Tên Tác Giả
            </th>
            <th>
                Số Lượng
            </th>
            <th>
                Năm Xuất Bản
            </th>
            @*            <th>
            @Html.DisplayNameFor(model => model.MoTa)
            </th>*@
            <th>
                Giá Bìa
            </th>
            <th>
                Ảnh Đại Diện
            </th>
            @*            <th>
            @Html.DisplayNameFor(model => model.TinhTrangSach)
            </th>*@
            <th>
                Nhà Xuất Bản
            </th>
            <th>
                Thể Loại
            </th>
            <th>
                Vị trí
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenTacGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamXuatBan)
                </td>
                @*                <td>
            @Html.DisplayFor(modelItem => item.MoTa)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.GiaBia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnhDaiDien)
                </td>
                @*                <td>
            @Html.DisplayFor(modelItem => item.TinhTrangSach)
            </td>*@
                <td>
                    @{
                        var NXB = new QltvApiContext().NhaXuatBans.Find(item.MaNxb);
                    }
                    @NXB.TenNxb
                </td>
                <td>
                    @{
                        var TheLoai = new QltvApiContext().TheLoais.Find(item.MaTheLoai);
                    }
                    @TheLoai.TenTheLoai
                </td>
                <td>
                    @{
                        var ViTri = new QltvApiContext().ViTris.Find(item.MaViTri);
                    }
                    @ViTri.MaViTri
                </td>
                <td>
                    <a asp-action="SuaSachTheoTheLoai" asp-route-maSach="@item.MaSach">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaSach">Details</a> |

                    <a asp-action="DeleteSach" asp-route-MaSach="@item.MaSach">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
