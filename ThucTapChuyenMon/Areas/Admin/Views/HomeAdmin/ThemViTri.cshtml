@model ThucTapChuyenMon.Models.ViTri
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ThemViTri";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script type="text/javascript">
    function ThemViTri() {
        var MaViTri = document.getElementById("MaViTri").value;
        var KeSach = document.getElementById("KeSach").value;
        var NganSach = document.getElementById("NganSach").value;
        var GiaSach = document.getElementById("GiaSach").value;
        var ViTriTrenGia = document.getElementById("ViTriTrenGia").value;
        var url = 'https://localhost:7113/api/vitriapi?MaViTri=' + MaViTri
            + '&KeSach=' + KeSach
            + '&NganSach=' + NganSach
            + '&GiaSach=' + GiaSach
            + '&ViTriTrenGia=' + ViTriTrenGia;
        $.ajax({
            url: url,
            method: 'POST',
            contentType: 'json',
            dataType: 'json',
            error: function (response) {
                alert("Thêm mới không thành công")
            },
            success: function (reponse) {
                alert("Thêm mới thành công");
                window.location.href = 'https://localhost:7113/admin/vitri';
            }
        });
    }
</script>
<h1>Thêm Vị Trí</h1>

<h4>Vị Trí</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ThemViTri">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @{
                    int lastid = ViewBag.lastId;
                    string id = "";
                    if (lastid >= 9)
                        id = "VT" + (lastid + 1).ToString();
                    else
                        id = "VT0" + (lastid + 1).ToString();
                }

                <label asp-for="MaViTri" class="control-label">Mã Vị Trí</label>
                <input asp-for="MaViTri" class="form-control" value="@id" readonly/>
                <span asp-validation-for="MaViTri" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    int lastid1 = ViewBag.lastId;
                    string id1 = "";
                    if (lastid1 >= 9)
                        id1 = "KS" + (lastid1 + 1).ToString();
                    else
                        id1 = "KS0" + (lastid1 + 1).ToString();
                }
                <label asp-for="KeSach" class="control-label">Kệ Sách</label>
                <input asp-for="KeSach" class="form-control" value="@id1"/>
                <span asp-validation-for="KeSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    int lastid2 = ViewBag.lastId;
                    string id2 = "";
                    if (lastid2 >= 9)
                        id2 = "VT" + (lastid2 + 1).ToString();
                    else
                        id2 = "VT0" + (lastid2 + 1).ToString();
                }
                <label asp-for="NganSach" class="control-label">Ngăn Sách</label>
                <input asp-for="NganSach" class="form-control" value="@id2" />
                <span asp-validation-for="NganSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    int lastid3 = ViewBag.lastId;
                    string id3 = "";
                    if (lastid3 >= 9)
                        id3 = "VT" + (lastid3 + 1).ToString();
                    else
                        id3 = "VT0" + (lastid3 + 1).ToString();
                }
                <label asp-for="GiaSach" class="control-label">Giá Sách</label>
                <input asp-for="GiaSach" class="form-control" value="@id3" />
                <span asp-validation-for="GiaSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViTriTrenGia" class="control-label">Vị Trí Trên Giá</label>
                <input asp-for="ViTriTrenGia" class="form-control" />
                <span asp-validation-for="ViTriTrenGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" onclick="ThemViTri()" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViTri">Về danh sách</a>
</div>

